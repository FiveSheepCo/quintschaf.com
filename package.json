{
  "private": true,
  "name": "preact",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --dest docs",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "node-sass": "^4.14.1",
    "preact-cli": "^3.0.0",
    "sass-loader": "^9.0.3",
    "sirv-cli": "1.0.3"
  },
  "dependencies": {
    "feather-icons": "^4.28.0",
    "history": "^5.0.0",
    "include-media": "^1.4.9",
    "preact": "^10.3.2",
    "preact-feather": "^4.1.0",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
